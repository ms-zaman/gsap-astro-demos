---
// Service Feature Component
interface Props {
  title: string;
  icon?: string;
}

const { title, icon } = Astro.props;
---

<div class="service-feature">
  {icon && <div class="feature-icon">{icon}</div>}
  <div class="feature-content">
    <h3 class="feature-title">{title}</h3>
    <p class="feature-description">
      <slot />
    </p>
  </div>
</div>

<style>
  .service-feature {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }
  
  .feature-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: var(--light-gray);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    font-size: 1.5rem;
  }
  
  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
    color: var(--black);
  }
  
  .feature-description {
    color: var(--dark-gray);
    line-height: 1.6;
  }
  
  @media (max-width: 992px) {
    .service-feature {
      text-align: left;
      align-items: flex-start;
    }
  }
</style>
